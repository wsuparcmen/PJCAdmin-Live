@model PJCAdmin.Models.TaskModel
<li class="Task">\
    <table>\
        <tr><td>Task Name:</td><td><input type="text" name="Tasks['+atIndex+'].taskName" value="" /></td></tr>\
        <tr><td>Description:</td><td><input type="text" name="Tasks['+atIndex+'].taskDescription" value="" /></td></tr>\
        <tr><td>Category:</td><td><select name="Tasks['+atIndex+'].TaskCategory.categoryName">\
                                @foreach (string name in ViewData["TaskCategories"] as List<string>)
                                {
                                    <option value="@name">@name</option>@("")
                                }\
                          </select></td></tr> <!-- TODO Make Hidden: Not used? -->\
        <tr><td><!--Sequence Number:--><input type="hidden" name="Tasks['+atIndex+'].sequenceNo" class="seqNo" value="'+(atIndex + 1)+'" /></td></tr> <!-- TODO Make Hidden -->\
        <tr><td>Timed:</td><td><input type="checkbox" name="Tasks['+atIndex+'].isTimed" /></td></tr>\
        <tr><td>Expected Duration:</td><td><input type="text" name="Tasks['+atIndex+'].expectedDuration" value="" /></td></tr>\
    </table>\
    \
    <h4>Task Feedback</h4>\
        <ol class="TaskFeedbacks">\
        </ol>\
        <p><button class="AddFinalTaskFeedback" style="font-size:10pt;">Add Task Feedback</button></p>\
    <table>\
        <tr>\
            <td>\
                <button class="AddTask">Add New Task Before</button>\
            </td>\
            <td>\
                <button class="RemoveTask">Remove This Task</button>\
            </td>\
        </tr>\
    </table>\
    <hr/>\
</li>\
